{
	"name": "Spooky Website Lens",
	"version": "0.1",
	"description": "Spookify any website!",
	"permissions": ["tabs", "http://*/*", "https://*/*", "file:///*/*"],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*", "file:///*/*"],
			"js": ["/content_script.js"],
			"css": ["/style.css"]
		}
	],
	"web_accessible_resources": [
		"images/*.png"
	],
	"page_action": {
      "default_icon": {
        "128": "images/ghost-icon128.png"
      }
    },
    "icons": {
      "128": "images/ghost-icon128.png"
    },
    "manifest_version": 2
  }